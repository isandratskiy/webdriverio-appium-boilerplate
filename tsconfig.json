{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "./*"
      ],
      "src/*": [
        "./src/*"
      ],
      "test/*": [
        "./tests/*"
      ]
    },
    "outDir": "./build",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "types": [
      "@wdio/sync",
      "@wdio/mocha-framework",
      "mocha",
      "node",
      "chai"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
